        // --- ASSESSMENT SYSTEM ---
        function renderAssessment() {
            const container = document.getElementById('assessment-container');
            container.innerHTML = `
                <div class="max-w-4xl mx-auto">
                    <h2 class="text-2xl md:text-3xl font-bold text-center mb-4 its-blue">Asesmen Awal Mahasiswa</h2>
                    <p class="text-center text-subtle mb-8">Lengkapi semua bagian untuk membuka dasbor personal dan IDP</p>
                    
                    <!-- Progress bar -->
                    <div class="mb-6">
                        <div class="flex justify-between mb-1">
                            <span class="text-sm font-medium">Progress Asesmen</span>
                            <span class="text-sm font-medium" id="progress-percentage">0%</span>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-fill" id="progress-fill" style="width: 0%"></div>
                        </div>
                    </div>
                    
                    <div class="bg-card rounded-xl shadow-lg p-4 md:p-6">
                        <div id="stepper" class="flex overflow-x-auto pb-3 mb-6 gap-2"></div>
                        <div id="assessment-content" class="min-h-[400px]"></div>
                        
                        <div class="flex justify-between items-center mt-8 pt-6 border-t border-base">
                            <button id="prev-btn" class="bg-slate-200 dark:bg-slate-700 text-main font-bold py-2 px-6 rounded-lg hover:bg-slate-300 dark:hover:bg-slate-600 transition disabled:opacity-50 disabled:cursor-not-allowed">
                                <i class="fas fa-arrow-left mr-2"></i>Kembali
                            </button>
                            <div class="text-sm font-medium text-subtle">
                                Langkah <span id="current-step">1</span> dari <span id="total-steps">${assessmentSteps.length}</span>
                            </div>
                            <button id="next-btn" class="bg-its-blue text-white font-bold py-2 px-6 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition">
                                Lanjut <i class="fas fa-arrow-right ml-2"></i>
                            </button>
                        </div>
                    </div>
                </div>`;
            
            initAssessmentWizard();
        }
        
        function initAssessmentWizard() {
            const stepperContainer = document.getElementById('stepper');
            const contentContainer = document.getElementById('assessment-content');
            const totalStepsEl = document.getElementById('total-steps');
            const currentStepEl = document.getElementById('current-step');
            const prevBtn = document.getElementById('prev-btn');
            const nextBtn = document.getElementById('next-btn');
            
            // Initialize steps
            totalStepsEl.textContent = assessmentSteps.length;
            
            // Render stepper
            stepperContainer.innerHTML = '';
            assessmentSteps.forEach((step, index) => {
                const stepEl = document.createElement('div');
                stepEl.className = `step flex flex-col items-center px-3 py-2 cursor-pointer ${index === 0 ? 'step-active' : 'step-inactive'}`;
                stepEl.innerHTML = `
                    <i class="fas ${step.icon} mb-1"></i>
                    <span class="text-xs">${step.name}</span>
                `;
                stepEl.addEventListener('click', () => {
                    if (index < state.currentStep) {
                        state.currentStep = index;
                        updateAssessmentUI();
                    }
                });
                stepperContainer.appendChild(stepEl);
            });
            
            // Render current step content
            function updateAssessmentUI() {
                // Update stepper
                const steps = stepperContainer.querySelectorAll('.step');
                steps.forEach((step, index) => {
                    step.classList.remove('step-active', 'step-completed');
                    if (index === state.currentStep) {
                        step.classList.add('step-active');
                    } else if (index < state.currentStep) {
                        step.classList.add('step-completed');
                    } else {
                        step.classList.add('step-inactive');
                    }
                });
                
                // Update content
                const currentStep = assessmentSteps[state.currentStep];
                contentContainer.innerHTML = `
                    <div class="text-center mb-6">
                        <h3 class="font-bold text-xl md:text-2xl mb-2 its-blue">${currentStep.title}</h3>
                        <p class="text-subtle">${currentStep.description}</p>
                    </div>
                    ${currentStep.content}`;
                
                // Update progress
                const progress = (state.currentStep / assessmentSteps.length) * 100;
                document.getElementById('progress-fill').style.width = `${progress}%`;
                document.getElementById('progress-percentage').textContent = `${Math.round(progress)}%`;
                
                // Update buttons
                prevBtn.disabled = state.currentStep === 0;
                currentStepEl.textContent = state.currentStep + 1;
                
                if (state.currentStep === assessmentSteps.length - 1) {
                    nextBtn.innerHTML = 'Selesai <i class="fas fa-check ml-2"></i>';
                } else {
                    nextBtn.innerHTML = 'Lanjut <i class="fas fa-arrow-right ml-2"></i>';
                }
                
                // Load dynamic content for specific steps
                if (state.currentStep === 1) {
                    loadRiasecQuestions();
                } else if (state.currentStep === 2) {
                    loadBigFiveQuestions();
                } else if (state.currentStep === 3) {
                    loadVarkQuestions();
                } else if (state.currentStep === 4) {
                    loadPwbQuestions();
                }
            }
            
            function loadRiasecQuestions() {
                const container = document.getElementById('riasec-questions-container');
                container.innerHTML = riasecQuestions.map((q, i) => `
                    <div class="mb-6">
                        <p class="font-semibold mb-3">${i + 1}. ${q}</p>
                        <div class="likert-scale grid grid-cols-5 gap-2" data-question="riasec_q${i + 1}">
                            <button class="likert-option" data-value="1">Sangat Tidak Minat</button>
                            <button class="likert-option" data-value="2">Tidak Minat</button>
                            <button class="likert-option" data-value="3">Netral</button>
                            <button class="likert-option" data-value="4">Minat</button>
                            <button class="likert-option" data-value="5">Sangat Minat</button>
                        </div>
                    </div>
                `).join('');
                
                attachLikertListeners();
            }
            
            function loadBigFiveQuestions() {
                const container = document.getElementById('bigfive-questions-container');
                container.innerHTML = bigFiveQuestions.map((q, i) => `
                    <div class="mb-6">
                        <p class="font-semibold mb-3">${i + 1}. ${q}</p>
                        <div class="likert-scale grid grid-cols-5 gap-2" data-question="bigfive_q${i + 1}">
                            <button class="likert-option" data-value="1">Sangat Tidak Setuju</button>
                            <button class="likert-option" data-value="2">Tidak Setuju</button>
                            <button class="likert-option" data-value="3">Netral</button>
                            <button class="likert-option" data-value="4">Setuju</button>
                            <button class="likert-option" data-value="5">Sangat Setuju</button>
                        </div>
                    </div>
                `).join('');
                
                attachLikertListeners();
            }
            
            function loadVarkQuestions() {
                const container = document.getElementById('vark-questions-container');
                container.innerHTML = varkQuestions.map((item, index) => `
                    <div class="mb-8">
                        <p class="font-semibold text-lg mb-4">${index + 1}. ${item.q}</p>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            ${item.o.map((option, i) => `
                                <label class="assessment-card">
                                    <input type="radio" name="vark_q${index + 1}" value="${i}" class="hidden">
                                    <span class="font-medium">${option}</span>
                                </label>
                            `).join('')}
                        </div>
                    </div>
                `).join('');
                
                attachCardListeners();
            }
            
            function loadPwbQuestions() {
                const container = document.getElementById('pwb-questions-container');
                container.innerHTML = pwbQuestions.map((q, i) => `
                    <div class="mb-6">
                        <p class="font-semibold mb-3">${i + 1}. ${q}</p>
                        <div class="likert-scale grid grid-cols-7 gap-1" data-question="pwb_q${i + 1}">
                            <button class="likert-option" data-value="1">Sangat Tdk Setuju</button>
                            <button class="likert-option" data-value="2">Tdk Setuju</button>
                            <button class="likert-option" data-value="3">Agak Tdk Setuju</button>
                            <button class="likert-option" data-value="4">Netral</button>
                            <button class="likert-option" data-value="5">Agak Setuju</button>
                            <button class="likert-option" data-value="6">Setuju</button>
                            <button class="likert-option" data-value="7">Sangat Setuju</button>
                        </div>
                    </div>
                `).join('');
                
                attachLikertListeners();
            }
            
            function attachLikertListeners() {
                document.querySelectorAll('.likert-scale').forEach(scale => {
                    scale.querySelectorAll('.likert-option').forEach(option => {
                        option.addEventListener('click', () => {
                            scale.querySelectorAll('.likert-option').forEach(opt => {
                                opt.classList.remove('selected');
                            });
                            option.classList.add('selected');
                        });
                    });
                });
            }
            
            function attachCardListeners() {
                document.querySelectorAll('.assessment-card').forEach(card => {
                    card.addEventListener('click', () => {
                        const container = card.closest('.grid');
                        container.querySelectorAll('.assessment-card').forEach(c => {
                            c.classList.remove('selected');
                        });
                        card.classList.add('selected');
                        const input = card.querySelector('input');
                        input.checked = true;
                    });
                });
            }
            
            function validateStep() {
                // In a real implementation, this would validate the current step
                return true;
            }
            
            function saveStepData() {
                const currentStep = assessmentSteps[state.currentStep];
                
                if (state.currentStep === 0) {
                    // Personal data
                    state.assessmentData.personal = {
                        full_name: document.getElementById('full_name').value,
                        nickname: document.getElementById('nickname').value,
                        registration_number: document.getElementById('registration_number').value,
                        major: document.getElementById('major').value,
                        whatsapp_number: document.getElementById('whatsapp_number').value
                    };
                }
                else if (state.currentStep === 1) {
                    // RIASEC data
                    state.assessmentData.riasec = {};
                    document.querySelectorAll('#riasec-questions-container .likert-scale').forEach((scale, i) => {
                        const selected = scale.querySelector('.selected');
                        if (selected) {
                            state.assessmentData.riasec[`q${i + 1}`] = selected.dataset.value;
                        }
                    });
                }
                else if (state.currentStep === 2) {
                    // Big Five data
                    state.assessmentData.bigfive = {};
                    document.querySelectorAll('#bigfive-questions-container .likert-scale').forEach((scale, i) => {
                        const selected = scale.querySelector('.selected');
                        if (selected) {
                            state.assessmentData.bigfive[`q${i + 1}`] = selected.dataset.value;
                        }
                    });
                }
                else if (state.currentStep === 3) {
                    // VARK data
                    state.assessmentData.vark = {};
                    document.querySelectorAll('#vark-questions-container .assessment-card').forEach((card, i) => {
                        const input = card.querySelector('input');
                        if (input.checked) {
                            state.assessmentData.vark[`q${i + 1}`] = input.value;
                        }
                    });
                }
                else if (state.currentStep === 4) {
                    // PWB data
                    state.assessmentData.pwb = {};
                    document.querySelectorAll('#pwb-questions-container .likert-scale').forEach((scale, i) => {
                        const selected = scale.querySelector('.selected');
                        if (selected) {
                            state.assessmentData.pwb[`q${i + 1}`] = selected.dataset.value;
                        }
                    });
                }
                else if (state.currentStep === 5) {
                    // Goals data
                    state.assessmentData.goals = {
                        field: document.getElementById('role_model_field').value,
                        person: document.getElementById('role_model_person').value,
                        aspirations: document.getElementById('exp_q4').value
                    };
                }
            }
            
            prevBtn.addEventListener('click', () => {
                if (state.currentStep > 0) {
                    state.currentStep--;
                    updateAssessmentUI();
                }
            });
            
            nextBtn.addEventListener('click', () => {
                if (validateStep()) {
                    saveStepData();
                    
                    if (state.currentStep < assessmentSteps.length - 1) {
                        state.currentStep++;
                        updateAssessmentUI();
                    } else {
                        completeAssessment();
                    }
                } else {
                    alert('Silakan lengkapi semua pertanyaan pada langkah ini');
                }
            });
            
            // Initialize
            updateAssessmentUI();
        }
        
        function completeAssessment() {
            // Show success message
            const assessmentContainer = document.getElementById('assessment-container');
            assessmentContainer.innerHTML = `
                <div class="max-w-2xl mx-auto text-center py-12">
                    <div class="w-20 h-20 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i class="fas fa-check text-green-500 text-3xl"></i>
                    </div>
                    <h2 class="text-2xl font-bold mb-4 text-green-600">Asesmen Berhasil Diselesaikan!</h2>
                    <p class="text-lg text-subtle mb-8">Terima kasih telah menyelesaikan asesmen. Hasil analisis dan rencana pengembangan Anda sedang diproses.</p>
                    <button id="view-dashboard" class="bg-its-blue text-white font-bold py-3 px-8 rounded-lg hover:bg-blue-700 transition text-lg">
                        Lihat Dashboard & Rencana Pengembangan
                    </button>
                </div>`;
            
            document.getElementById('view-dashboard').addEventListener('click', renderDashboard);
        }

